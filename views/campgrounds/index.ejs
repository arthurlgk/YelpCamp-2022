<% layout('layout/boilerplate') %>


    <h1 class='text-center mb-3'>All Campgrounds</h1>

    <ul>
        <% for (let campground of campgrounds) { %>
            <div class="card">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%=  campground.image %> " alt="">

                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5>
                                <%= campground.title %>
                            </h5>
                            <p>
                                <%=campground.description %>
                            </p>
                            <small class="text-muted">
                                <%=campground.location %>
                            </small>
                            <a href="campgrounds/<%=campground._id  %> " class="btn btn-primary mx-3">
                                View <%= campground.title %> </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>